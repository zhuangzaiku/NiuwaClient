<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="11.5dp"
    >

    <RelativeLayout
        android:layout_width="527dp"
        android:layout_height="20.5dp"
        android:layout_marginTop="117dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30.5dp"
        android:id="@+id/pk_layout"
        android:visibility="visible"
        android:background="@drawable/img_tiao01"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true">


            <ImageView
                android:layout_width="6dp"
                android:layout_height="17.5dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/blue"
                android:id="@+id/blue_left"
                android:background="@drawable/img_tiao08"
                android:visibility="visible"
                />
            <ImageView
                android:layout_width="512dp"
                android:layout_height="17.5dp"
                android:layout_centerVertical="true"
                android:background="@drawable/img_tiao02"
                android:layout_toLeftOf="@+id/blue_right"
                android:visibility="visible"
                android:id="@+id/blue">
            </ImageView>


            <ImageView
                android:layout_width="6dp"
                android:layout_height="17.5dp"
                android:id="@+id/blue_right"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="1.5dp"
                android:visibility="visible"
                android:background="@drawable/img_tiao07"/>

            <ImageView
                android:layout_width="7.5dp"
                android:layout_height="20.5dp"
                android:layout_marginRight="-4dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/blue"
                android:visibility="gone"
                android:id="@+id/divider"
                android:src="@drawable/img_tiao04"/>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="527dp"
        android:layout_height="20.5dp"
        android:layout_below="@+id/pk_layout"
        android:layout_alignLeft="@+id/pk_layout">
        
        
        <TextView
            android:layout_width="112dp"
            android:layout_height="match_parent"
            android:id="@+id/red_name"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/img_tiao05"/>

        <TextView
            android:layout_width="112dp"
            android:layout_height="match_parent"
            android:id="@+id/blue_name"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:background="@drawable/img_tiao06"/>
    </RelativeLayout>

    <GridView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="5"
        android:cacheColorHint="@color/transparent"
        android:listSelector="@color/transparent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="28dp"
        android:id="@+id/voteList"/>
</RelativeLayout>