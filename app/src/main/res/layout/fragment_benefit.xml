<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/noDataLayout_contribution_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/nodata" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="暂无数据"/>
        </LinearLayout>
    </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@color/divider_color">
                <TextView
                    android:id="@+id/benefit_all"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_shape"
                    android:text="总"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:textColor="@android:color/white"/>
                <TextView
                    android:id="@+id/benefit_month"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_shape_main"
                    android:text="月"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"/>
                <TextView
                    android:id="@+id/benefit_week"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_shape_main"
                    android:text="周"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"/>
                <TextView
                    android:id="@+id/benefit_day"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_shape_main"
                    android:text="日"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"/>



            </LinearLayout>
            <tv.niuwa.live.home.view.CustomSwipeRefreshLayout
                android:id="@+id/swipeRefreshLayout_all"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView_all"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </tv.niuwa.live.home.view.CustomSwipeRefreshLayout>
        </LinearLayout>



    </FrameLayout>
</LinearLayout>