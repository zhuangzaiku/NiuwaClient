<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contribution_item_container"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@drawable/bottom_solid"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp">

        <ImageView
            android:id="@+id/contribution_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_avatar_default"
            android:layout_gravity="center"/>
        <ImageView
            android:id="@+id/contribution_avatar_bg"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:visibility="gone"/>
    </FrameLayout>



    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/contribution_nicename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="太阳的后裔"
                android:textColor="@android:color/black"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/contribution_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:src="@drawable/userinfo_female" />

            <TextView
                android:id="@+id/contribution_level"
                android:layout_width="36dp"
                android:layout_height="15dp"
                android:background="@drawable/new_userlevel_1"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="8sp" />

            <ImageView
                android:id="@+id/contribution_real"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:src="@drawable/icon_v"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:text="贡献了"
                android:textSize="11sp"
                android:textColor="#999999" />

            <TextView
                android:id="@+id/fancontribution_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:text="100"
                android:textSize="11sp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="#f00" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:text="@string/coin1"
                android:textSize="11sp"
                android:textColor="#999999" />
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/text_num"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NO.1"
        android:textSize="16sp"
        android:padding="12dp" />

</LinearLayout>