<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_add_live_share_wechat_moment"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/share_timeline"/>

    <ImageView
        android:id="@+id/image_add_live_share_wechat"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/share_wechat"/>

    <ImageView
        android:id="@+id/image_add_live_share_weibo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/share_weibo"/>

    <ImageView
        android:id="@+id/image_add_live_share_qq"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/share_qq"/>

    <ImageView
        android:id="@+id/image_add_live_share_qzone"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/share_qqzone"/>
</LinearLayout>