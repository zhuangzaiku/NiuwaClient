<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/linear_item_home_latest_container"
              android:layout_width="match_parent"
              android:layout_height="50dp"
              android:background="@android:color/white"
    android:gravity="center_vertical">
   <FrameLayout
       android:id="@+id/topic_frame"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:background="@drawable/bottom_solid">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:id="@+id/item_topic_name"
          android:textSize="12sp"
          android:gravity="center_vertical"
          android:paddingLeft="15dp"/>
      <View
          android:id="@+id/topic_divider"
          android:layout_width="1dp"
          android:layout_height="match_parent"
          android:layout_marginTop="15dp"
          android:layout_marginBottom="15dp"
          android:background="@color/colorNewDivider"
          android:layout_gravity="right"/>
   </FrameLayout>


</LinearLayout>